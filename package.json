{
	"name": "mediaexplorer",
	"productName": "Media explorer",
	"version": "1.0.3",
	"description": "An image, video and audio explorer.",
	"author": "Kristian Benko",
	"copyright": "Copyright Â© 2026 Kristian Benko. All rights reserved.",
	"main": "./main.js",
	"type": "module",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder"
	},
	"build": {
		"appId": "com.mediaexplorer.app",
		"productName": "Media explorer",
		"artifactName": "Media explorer installer.exe",
		"directories": {
			"output": "build"
		},
		"files": [
			"**/*",
			"!build",
			"!dist",
			"!out",
			"!testFiles",
			"!README.md",
			"!zInfo.txt",
			"!.vscode",
			"!.env"
		],
		"win": {
			"target": "nsis",
			"icon": "client/assets/favicon.ico",
			"fileAssociations": [
				{
					"ext": [
						"png",
						"jpg",
						"jpeg",
						"webp",
						"ico",
						"svg",
						"jfif",
						"gif",
						"bmp",
						"tiff",
						"raw"
					],
					"name": "Image File",
					"description": "Image File",
					"icon": "client/assets/favicon.ico"
				},
				{
					"ext": [
						"mp4",
						"mkv",
						"mov",
						"avi",
						"wmv",
						"flv",
						"webm"
					],
					"name": "Video File",
					"description": "Video File",
					"icon": "client/assets/favicon.ico"
				},
				{
					"ext": [
						"mp3",
						"wav",
						"ogg"
					],
					"name": "Audio File",
					"description": "Audio File",
					"icon": "client/assets/favicon.ico"
				}
			]
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": false,
			"createStartMenuShortcut": true,
			"perMachine": false,
			"uninstallDisplayName": "Media explorer"
		}
	},
	"keywords": [],
	"license": "MIT",
	"dependencies": {
		"dotenv": "^17.2.4"
	},
	"devDependencies": {
		"electron": "^40.2.1",
		"electron-builder": "^26.7.0",
		"electron-reloader": "^1.2.3"
	}
}